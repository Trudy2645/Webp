<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Pretendard&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Pretendard', sans-serif;
      background-color: #f4f6f9;
      margin: 0;
      padding: 0;
    }
    header {
      background-color: #ffffff;
      border-bottom: 1px solid #dee2e6;
      padding: 1.2rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: sticky;
      top: 0;
      z-index: 1000;
    }
    header h1 {
      font-weight: 800;
      font-size: 1.8rem;
      margin: 0;
      color: #212529;
    }
    nav a {
      margin-left: 1.5rem;
      color: #495057;
      text-decoration: none;
      font-weight: 500;
    }
    nav a:hover {
      color: #0d6efd;
    }
    .banner img {
      width: 100%;
      height: auto;
      max-height: 400px;
      object-fit: cover;
      border-bottom: 4px solid #e9ecef;
    }
    .banner {
      position: relative;
    }
    .banner .scroll-btn {
      position: absolute;
      bottom: 70px;
      left: 7%;
      transform: translateX(-20%);
      background-color: black;
      color: white;
      border: none;
      padding: 0.8rem 1.6rem;
      font-size: 1rem;
      border-radius: 10px;
      cursor: pointer;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transition: background-color 0.3s ease;
    }
    .banner .scroll-btn:hover {
      background-color: #0056b3;
    }
    main {
      padding: 3rem 5%;
      text-align: center;
    }
    h2 {
      font-size: 1.7rem;
      font-weight: 700;
      color: #343a40;
      margin-bottom: 2rem;
      text-align: center;
    }
    .product-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
      width: 1000px;
      /* height: 1850px; */ /* Removed fixed height to allow content to dictate height */
      justify-content: center;
      margin: 0 auto;
    }
    .product-card {
      background-color: #ffffff;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 8px 16px rgba(0,0,0,0.06);
      transition: transform 0.2s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 1.2rem;
      text-align: center;
    }
    .product-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 20px rgba(0,0,0,0.12);
    }
    .product-card img {
      width: 100%;
      aspect-ratio: 2 / 3;
      object-fit: contain;
      border-radius: 10px;
      margin-bottom: 1rem;
    }
    .product-card strong {
      font-size: 1.1rem;
      color: #212529;
    }
    .price {
      font-size: 1.1rem;
      font-weight: bold;
      color: #0d6efd;
      margin-top: 0.3rem;
    }
    .product-actions { /* Flex container for buttons */
        display: flex;
        gap: 0.5rem; /* Space between buttons */
        margin-top: 0.5rem;
    }
    .product-actions .btn {
        flex: 1; /* Make buttons take equal width */
    }
    footer {
      margin-top: 4rem;
      padding: 2rem 0;
      background-color: #ffffff;
      border-top: 1px solid #dee2e6;
      color: #868e96;
      font-size: 0.9rem;
      text-align: center;
    }
  </style>
</head>
<script>
  function scrollToProducts() {
    const target = document.getElementById('products');
    if (target) {
      target.scrollIntoView({ behavior: 'smooth' });
    }
  }

  // Client-side JavaScript for adding to wishlist
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.add-to-wishlist-btn').forEach(button => {
      button.addEventListener('click', async (event) => {
        const productId = event.target.dataset.productId;

        try {
          const response = await fetch('/wishlist/add', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ productId: productId }),
          });
          const data = await response.json();

          if (response.ok) { // Check for successful HTTP status (2xx)
            alert(data.message);
          } else {
            // Handle server-side errors or messages
            alert(data.message || '위시리스트 추가 중 오류가 발생했습니다.');
          }
        } catch (error) {
          console.error('Error adding to wishlist:', error);
          alert('위시리스트 추가 요청 중 네트워크 오류가 발생했습니다.');
        }
      });
    });
  });
</script>
<body>
  <header>
    <h1>🪬 <%= title %></h1>
    <nav>
      <a href="/">홈</a>
      <a href="/products">상품목록</a>
      <a href="/cart">장바구니</a>
      <a href="/wishlist">위시리스트</a> 
      <a href="/board">고객센터</a>
      <% if (user) { %>
        <a href="/user/mypage">마이페이지</a>
        <a href="/user/logout">로그아웃</a>
      <% } else { %>
        <a href="/login">로그인</a>
        <a href="/user/register">회원가입</a>
      <% } %>
    </nav>
  </header>

  <section class="banner">
    <img src="/images/banner.png" alt="쇼핑몰 메인 배너" />
    <button class="scroll-btn" onclick="scrollToProducts()">🔥 인기 상품 보러가기 -></button>
  </section>

  <main id="products">
    <h2>🔥 인기 상품</h2>
    <div class="product-grid">
      <% const products = [
        { id: 1, name: '부장님 저 몸이 안좋아서..', price: 35000, image: '/images/TakeDayOff.png' },
        { id: 2, name: '안녕히 계세요 여러분', price: 28000, image: '/images/GoHome.png' },
        { id: 3, name: '부장님과의 면담 패스', price: 5000, image: '/images/IDonKnow.png' },
        { id: 4, name: '1주일간 야근 없음', price: 250000, image: '/images/NoOverTime.png' },
        { id: 5, name: '집에 일이 생겨서...', price: 22000, image: '/images/NoStaffDinner.png' },
        { id: 6, name: '저는 떠납니다!', price: 1000000000, image: '/images/Quit.png' },
        { id: 7, name: '효율 300% 증가', price: 26000, image: '/images/SkillUp.png' }
      ]; %>

      <% products.forEach(product => { %>
        <div class="product-card">
          <img src="<%= product.image %>" alt="<%= product.name %>" />
          <p><strong><%- product.name %></strong></p>
          <p class="price">₩<%= product.price.toLocaleString() %></p>
          <div class="product-actions"> <form action="/cart/add" method="POST" style="flex: 1;"> <input type="hidden" name="productId" value="<%= product.id %>">
              <button type="submit" class="btn btn-outline-primary">🛒 장바구니 담기</button>
            </form>
            <button class="btn btn-outline-danger add-to-wishlist-btn" data-product-id="<%= product.id %>">
              ❤️ 위시리스트 추가
            </button>
          </div>
        </div>
      <% }); %>
    </div>
  </main>

  <footer>
    <p>&copy; 2025 쇼핑몰 예시. All rights reserved.</p>
  </footer>
</body>
</html>